<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://www.joomla.org/xml/dtd/1.5/module-install.dtd">
<install type="module" version="1.5.0" method="upgrade" client="site">
	<name>Akeeba Subscriptions - Subscription expiration</name>
	<author>Nicholas K. Dionysopoulos</author>
	<creationDate>October 2011</creationDate>
	<copyright>Copyright (C) 2011 Nicholas K. Dionysopoulos / AkeebaBackup.com</copyright>
	<license>GNU GPLv3 - http://www.gnu.org/licenses/gpl.html</license>
	<authorEmail>nicholas@akeebabackup.com</authorEmail>
	<authorUrl>www.akeebabackup.com</authorUrl>
	<version>1.0</version>
	<description>MOD_AKSEXPIRES_DESCRIPTION</description>
	<files>
		<file module="mod_aksexpires">mod_aksexpires.php</file>
	</files>
	<languages folder="translation">
		<language tag="en-GB">en-GB.mod_aksexpires.ini</language>
		<language tag="en-GB">en-GB.mod_aksexpires.sys.ini</language>
		<language tag="el-GR">el-GR.mod_aksexpires.ini</language>
		<language tag="el-GR">el-GR.mod_aksexpires.sys.ini</language>
		<language tag="es-ES">es-ES.mod_aksexpires.ini</language>
		<language tag="es-ES">es-ES.mod_aksexpires.sys.ini</language>
		<language tag="pl-PL">pl-PL.mod_aksexpires.ini</language>
		<language tag="pl-PL">pl-PL.mod_aksexpires.sys.ini</language>
	</languages>

	<params>
		<param name="moduleclass_sfx" type="text" default="" label="MOD_AKSEXPIRES_SUFFIX_LABEL" description="MOD_AKSEXPIRES_SUFFIX_DESC" />
	</params>
	<params group="advanced">
		<param name="cache" type="list" default="1" label="MOD_AKSEXPIRES_CACHING_LABEL" description="MOD_AKSEXPIRES_CACHING_DESC">
			<option value="1">MOD_AKSEXPIRES_CACHING_OPT_GLOBAL</option>
			<option value="0">MOD_AKSEXPIRES_CACHING_OPT_NONE</option>
		</param>
		<param name="cache_time" type="text" default="900" label="MOD_AKSEXPIRES_CACHETIME_LABEL" description="MOD_AKSEXPIRES_CACHETIME_DESC" />
	</params>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="MOD_AKSEXPIRES_SUFFIX_LABEL" description="MOD_AKSEXPIRES_SUFFIX_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="cache" type="list" default="1" label="MOD_AKSEXPIRES_CACHING_LABEL" description="MOD_AKSEXPIRES_CACHING_DESC">
					<option value="1">MOD_AKSEXPIRES_CACHING_OPT_GLOBAL</option>
					<option value="0">MOD_AKSEXPIRES_CACHING_OPT_NONE</option>
				</field>
				<field name="cache_time" type="text" default="900" label="MOD_AKSEXPIRES_CACHETIME_LABEL" description="MOD_AKSEXPIRES_CACHETIME_DESC" />
			</fieldset>
		</fields>
	</config>
</install>