<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://www.joomla.org/xml/dtd/1.5/module-install.dtd">
<install type="module" version="1.5.0" method="upgrade">
	<name>Akeeba Subscriptions - List subscription levels</name>
	<author>Nicholas K. Dionysopoulos</author>
	<creationDate>March 2011</creationDate>
	<copyright>Copyright (C) 2011 Nicholas K. Dionysopoulos / AkeebaBackup.com</copyright>
	<license>GNU GPLv3 - http://www.gnu.org/licenses/gpl.html</license>
	<authorEmail>nicholas@akeebabackup.com</authorEmail>
	<authorUrl>www.akeebabackup.com</authorUrl>
	<version>1.0</version>
	<description>Displays a list of specific subscription levels</description>
	<files>
		<file module="mod_akslevels">mod_akslevels.php</file>
		<file>html.php</file>
	</files>

	<params addpath="/modules/mod_akslevels/elements">
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="ids" type="sql2" default=""
			label="MOD_AKSLEVELS_LEVELS_TITLE"
			description="MOD_AKSLEVELS_LEVELS_DESC"
			query="SELECT `akeebasubs_level_id`, `title` FROM `#__akeebasubs_levels`"
			key_field="akeebasubs_level_id"
			value_field="title" />
	</params>
	<params group="advanced">
		<param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
	</params>
	
	<config>
	</config>
</install>