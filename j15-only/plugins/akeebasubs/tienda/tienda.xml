<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install version="1.5" type="plugin" group="akeebasubs" method="upgrade">
	<name>Akeeba Subscriptions - Tienda Integration</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2012 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2011-03-04</creationDate>
	<version>1.0</version>
	<description>PLG_AKEEBASUBS_TIENDA_DESCRIPTION</description>
	<files>
		<filename plugin="tienda">tienda.php</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akeebasubs_tienda.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akeebasubs_tienda.sys.ini</language>
	</languages>
	<params>
		<param name="addgroups" type="textarea" default="" label="PLG_AKEEBASUBS_TIENDA_ADDGROUPS_TITLE" description="PLG_AKEEBASUBS_TIENDA_ADDGROUPS_DESCRIPTION" rows="5" cols="30" />
		<param name="removegroups" type="textarea" default="" label="PLG_AKEEBASUBS_TIENDA_REMOVEGROUPS_TITLE" description="PLG_AKEEBASUBS_TIENDA_REMOVEGROUPS_DESCRIPTION" rows="5" cols="30" />
	</params>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="addgroups" type="textarea" default="" label="PLG_AKEEBASUBS_TIENDA_ADDGROUPS_TITLE" description="PLG_AKEEBASUBS_TIENDA_ADDGROUPS_DESCRIPTION" rows="5" cols="30" />
				<field name="removegroups" type="textarea" default="" label="PLG_AKEEBASUBS_TIENDA_REMOVEGROUPS_TITLE" description="PLG_AKEEBASUBS_TIENDA_REMOVEGROUPS_DESCRIPTION" rows="5" cols="30" />
			</fieldset>
		</fields>
	</config>
</install>
