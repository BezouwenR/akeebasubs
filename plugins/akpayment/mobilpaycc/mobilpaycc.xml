<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - MobilPay (Credit Card)</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2013 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2013-07-02</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_MOBILPAYCC_DESCRIPTION</description>
	<files>
		<filename plugin="mobilpaycc">mobilpaycc.php</filename>
        <folder>mobilpaycc</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_mobilpaycc.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_mobilpaycc.sys.ini</language>
	</languages>
	<config addfieldpath="/plugins/akpayment/mobilprocc/fields">
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYPAL_TITLE_LABEL" description="PLG_AKPAYMENT_PAYPAL_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYPAL_PPIMAGE_LABEL" description="PLG_AKPAYMENT_PAYPAL_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="surcharge" type="text" size="50" default="" label="PLG_AKPAYMENT_COMMON_SURCHARGE_LABEL" description="PLG_AKPAYMENT_COMMON_SURCHARGE_DESC"/>
				<field type="spacer" />
				<field name="signature" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYPAL_MERCHANT_LABEL" description="PLG_AKPAYMENT_PAYPAL_MERCHANT_DESC"/>
				<field type="spacer" />
				<field name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_PAYPAL_SANDBOX_LABEL" description="PLG_AKPAYMENT_PAYPAL_SANDBOX_DESC">
				  <option value="0">JNo</option>
				  <option value="1">JYes</option>
				</field>
				<field name="sandbox_merchant" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYPAL_SANDBOX_MERCHANT_LABEL" description="PLG_AKPAYMENT_PAYPAL_SANDBOX_MERCHANT_LABEL"/>
				<field type="spacer" />
			</fieldset>
		</fields>
	</config>
</extension>