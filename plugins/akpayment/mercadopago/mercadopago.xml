<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - Mercadopago</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2013 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2013-08-23</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_MERCADOPAGO_DESCRIPTION</description>
	<files>
		<filename plugin="mercadopago">mercadopago.php</filename>
		<folder>mercadopago</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_mercadopago.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_mercadopago.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_MERCADOPAGO_TITLE_LABEL" description="PLG_AKPAYMENT_MERCADOPAGO_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_MERCADOPAGO_PPIMAGE_LABEL" description="PLG_AKPAYMENT_MERCADOPAGO_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="surcharge" type="text" size="50" default="" label="PLG_AKPAYMENT_COMMON_SURCHARGE_LABEL" description="PLG_AKPAYMENT_COMMON_SURCHARGE_DESC"/>
				<field type="spacer" />
				<field name="client_id" type="text" size="50" default="" label="PLG_AKPAYMENT_MERCADOPAGO_CLIENT_ID_LABEL" />
				<field name="client_secret" type="text" size="50" default="" label="PLG_AKPAYMENT_MERCADOPAGO_CLIENT_SECRET_LABEL" />
                <field type="spacer" />
                <field name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_MERCADOPAGO_SANDBOX_LABEL" description="PLG_AKPAYMENT_MERCADOPAGO_SANDBOX_DESC">
                    <option value="0">JNo</option>
                    <option value="1">JYes</option>
                </field>
			</fieldset>
		</fields>
	</config>
</extension>