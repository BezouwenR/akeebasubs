<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install version="1.5" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - Goolge Checkout</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2012 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2012-01-26</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_GOOGLECHECKOUT_DESCRIPTION</description>
	<files>
		<filename plugin="googlecheckout">googlecheckout.php</filename>
		<folder>googlecheckout</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_googlecheckout.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_googlecheckout.sys.ini</language>
	</languages>
	<params>
		<param name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_GOOGLECHECKOUT_TITLE_LABEL" description="PLG_AKPAYMENT_GOOGLECHECKOUT_TITLE_DESC"/>
		<param type="spacer" />
		<param name="merchant" type="text" size="50" default="" label="PLG_AKPAYMENT_GOOGLECHECKOUT_MERCHANT_LABEL" description="PLG_AKPAYMENT_GOOGLECHECKOUT_MERCHANT_DESC"/>
		<param type="spacer" />
		<param name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_GOOGLECHECKOUT_SANDBOX_LABEL" description="PLG_AKPAYMENT_GOOGLECHECKOUT_SANDBOX_DESC">
		  <option value="0">No</option>
		  <option value="1">Yes</option>
		</param>
		<param name="sandbox_merchant" type="text" size="50" default="" label="PLG_AKPAYMENT_GOOGLECHECKOUT_SANDBOX_MERCHANT_LABEL" description="PLG_AKPAYMENT_GOOGLECHECKOUT_SANDBOX_MERCHANT_LABEL"/>
	</params>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_GOOGLECHECKOUT_TITLE_LABEL" description="PLG_AKPAYMENT_GOOGLECHECKOUT_TITLE_DESC"/>
				<field type="spacer" />
				<field name="merchant" type="text" size="50" default="" label="PLG_AKPAYMENT_GOOGLECHECKOUT_MERCHANT_LABEL" description="PLG_AKPAYMENT_GOOGLECHECKOUT_MERCHANT_DESC"/>
				<field type="spacer" />
				<field name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_GOOGLECHECKOUT_SANDBOX_LABEL" description="PLG_AKPAYMENT_GOOGLECHECKOUT_SANDBOX_DESC">
				  <option value="0">No</option>
				  <option value="1">Yes</option>
				</field>
				<field name="sandbox_merchant" type="text" size="50" default="" label="PLG_AKPAYMENT_GOOGLECHECKOUT_SANDBOX_MERCHANT_LABEL" description="PLG_AKPAYMENT_GOOGLECHECKOUT_SANDBOX_MERCHANT_LABEL"/>
			</fieldset>
		</fields>
	</config>
</install>