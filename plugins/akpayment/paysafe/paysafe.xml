<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - PaySafe Card</name>
	<author>Akeeba Ltd</author>
	<authorUrl>https://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2013 Nicholas K. Dionysopoulos / Akeeba Ltd</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2013-07-19</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_PAYSAFE_DESCRIPTION</description>
	<files>
		<filename plugin="paysafe">paysafe.php</filename>
		<folder>paysafe</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_paysafe.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_paysafe.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default=""
					   label="PLG_AKPAYMENT_PAYSAFE_TITLE_LABEL"
					   description="PLG_AKPAYMENT_PAYSAFE_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default=""
					   label="PLG_AKPAYMENT_PAYSAFE_PPIMAGE_LABEL"
					   description="PLG_AKPAYMENT_PAYSAFE_PPIMAGE_DESC" />
				
				<field type="spacer" />
				
				<field name="surcharge" type="text" size="50" default=""
					   label="PLG_AKPAYMENT_COMMON_SURCHARGE_LABEL"
					   description="PLG_AKPAYMENT_COMMON_SURCHARGE_DESC "/>

				<field type="spacer" />

				<field name="username" type="text" size="50" default=""
					   label="PLG_AKPAYMENT_PAYSAFE_USERNAME_LABEL"
					   description="PLG_AKPAYMENT_PAYSAFE_USERNAME_DESC"/>
				<field name="password" type="password" size="50" default=""
					   label="PLG_AKPAYMENT_PAYSAFE_PASSWORD_LABEL"
					   description="PLG_AKPAYMENT_PAYSAFE_PASSWORD_DESC"/>
				
				<field type="spacer" />
				
				<field name="sandbox" type="radio" default="0"
					label="PLG_AKPAYMENT_PAYSAFE_SANDBOX_LABEL" description="PLG_AKPAYMENT_PAYSAFE_SANDBOX_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>