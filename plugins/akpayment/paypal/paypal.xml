<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install version="1.5" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - Paypal</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2011-03-04</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_PAYPAL_DESCRIPTION</description>
	<files>
		<filename plugin="paypal">paypal.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_akpayment_paypal.ini</language>
	</languages>
	<params>
		<param name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYPAL_TITLE_LABEL" description="PLG_AKPAYMENT_PAYPAL_TITLE_DESC"/>
		<param type="spacer" />
		<param name="merchant" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYPAL_MERCHANT_LABEL" description="PLG_AKPAYMENT_PAYPAL_MERCHANT_DESC"/>
		<param name="secureipn" type="radio" default="0" label="PLG_AKPAYMENT_PAYPAL_SECUREIPN_LABEL" description="PLG_AKPAYMENT_PAYPAL_SECUREIPN_DESC">
		  <option value="0">No</option>
		  <option value="1">Yes</option>
		</param>		
		<param type="spacer" />
		<param name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_PAYPAL_SANDBOX_LABEL" description="PLG_AKPAYMENT_PAYPAL_SANDBOX_DESC">
		  <option value="0">No</option>
		  <option value="1">Yes</option>
		</param>
		<param name="sandbox_merchant" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYPAL_SANDBOX_MERCHANT_LABEL" description="PLG_AKPAYMENT_PAYPAL_SANDBOX_MERCHANT_LABEL"/>
		<param type="spacer" />
		<param name="cbt" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYPAL_CBT_LABEL" description="PLG_AKPAYMENT_PAYPAL_CBT_DESC" />
		<param name="cpp_header_image" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYPAL_HEADER_LABEL" description="PLG_AKPAYMENT_PAYPAL_HEADER_DESC" />
		<param name="cpp_headerback_color" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYPAL_HEADERBACK_LABEL" description="PLG_AKPAYMENT_PAYPAL_HEADERBACK_DESC" />
		<param name="cpp_headerborder_color" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYPAL_HEADERBORDER_LABEL" description="PLG_AKPAYMENT_PAYPAL_HEADERBORDER_DESC" />
	</params>
</install>
