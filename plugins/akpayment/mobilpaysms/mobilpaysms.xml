<extension version="2.5.0" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - MobilPay (SMS)</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2013 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2013-07-02</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_MOBILPAYSMS_DESCRIPTION</description>
	<files>
		<filename plugin="mobilpaysms">mobilpaysms.php</filename>
        <folder>mobilpaysms</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_mobilpaysms.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_mobilpaysms.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_MOBILPAY_TITLE_LABEL" description="PLG_AKPAYMENT_MOBILPAY_TITLE_DESC"/>
                <field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_MOBILPAY_PPIMAGE_LABEL" description="PLG_AKPAYMENT_MOBILPAY_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="surcharge" type="text" size="50" default="" label="PLG_AKPAYMENT_COMMON_SURCHARGE_LABEL" description="PLG_AKPAYMENT_COMMON_SURCHARGE_DESC"/>
				<field type="spacer" />
				<field name="signature" type="text" size="50" default="" label="PLG_AKPAYMENT_MOBILPAY_MERCHANT_LABEL" description="PLG_AKPAYMENT_MOBILPAY_MERCHANT_DESC"/>
				<field type="spacer" />
				<field name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_MOBILPAY_SANDBOX_LABEL" description="PLG_AKPAYMENT_MOBILPAY_SANDBOX_DESC">
				  <option value="0">JNo</option>
				  <option value="1">JYes</option>
				</field>
                <field name="mpmapping" type="textarea" default="" label="PLG_AKPAYMENT_MOBILPAY_MAPPRICEPOINTS_TITLE" description="PLG_AKPAYMENT_MOBILPAY_MAPPRICEPOINTS_DESCRIPTION" rows="5" cols="30" />
			</fieldset>
		</fields>
	</config>
</extension>