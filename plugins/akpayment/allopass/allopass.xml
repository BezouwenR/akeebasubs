<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install version="1.5" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - Allopass</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2012 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2012-04-02</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_ALLOPASS_DESCRIPTION</description>
	<files>
		<filename plugin="allopass">allopass.php</filename>
		<folder>allopass</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_allopass.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_allopass.sys.ini</language>
	</languages>
	<params>
		<param name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_ALLOPASS_TITLE_LABEL" description="PLG_AKPAYMENT_ALLOPASS_TITLE_DESC"/>
		<param name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_ALLOPASS_PPIMAGE_LABEL" description="PLG_AKPAYMENT_ALLOPASS_PPIMAGE_DESC" />
		<param type="spacer" />
		<param name="key" type="text" size="50" default="" label="PLG_AKPAYMENT_ALLOPASS_APIKEY_LABEL" description="PLG_AKPAYMENT_ALLOPASS_APIKEY_DESC"/>
		<param name="skey" type="text" size="50" default="" label="PLG_AKPAYMENT_ALLOPASS_APISECRETKEY_LABEL" description="PLG_AKPAYMENT_ALLOPASS_APISECRETKEY_DESC"/>
		<param type="spacer" />
		<param name="apmapping" type="textarea" default="" label="PLG_AKEEBASUBS_ALLOPASS_MAPPRICEPOINTS_TITLE" description="PLG_AKEEBASUBS_ALLOPASS_MAPPRICEPOINTS_DESCRIPTION" rows="5" cols="30" />
	</params>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_ALLOPASS_TITLE_LABEL" description="PLG_AKPAYMENT_ALLOPASS_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_ALLOPASS_PPIMAGE_LABEL" description="PLG_AKPAYMENT_ALLOPASS_PPIMAGE_DESC" />	
				<field type="spacer" />
				<field name="key" type="text" size="50" default="" label="PLG_AKPAYMENT_ALLOPASS_APIKEY_LABEL" description="PLG_AKPAYMENT_ALLOPASS_APIKEY_DESC"/>
				<field name="skey" type="text" size="50" default="" label="PLG_AKPAYMENT_ALLOPASS_APISECRETKEY_LABEL" description="PLG_AKPAYMENT_ALLOPASS_APISECRETKEY_DESC"/>
				<field type="spacer" />
				<field name="apmapping" type="textarea" default="" label="PLG_AKPAYMENT_ALLOPASS_MAPPRICEPOINTS_TITLE" description="PLG_AKPAYMENT_ALLOPASS_MAPPRICEPOINTS_DESCRIPTION" rows="5" cols="30" />
			</fieldset>
		</fields>
	</config>
</install>
