<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - Be2Bill</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2013 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2013-11-05</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_BE2BILL_DESCRIPTION</description>

	<files>
		<filename plugin="be2bill">be2bill.php</filename>
	</files>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_be2bill.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_be2bill.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_BE2BILL_TITLE_LABEL" description="PLG_AKPAYMENT_BE2BILL_TITLE_DESC"/>
        <field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_BE2BILL_PPIMAGE_LABEL" description="PLG_AKPAYMENT_BE2BILL_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="surcharge" type="text" size="50" default="" label="PLG_AKPAYMENT_COMMON_SURCHARGE_LABEL" description="PLG_AKPAYMENT_COMMON_SURCHARGE_DESC"/>
				<field type="spacer" />
        <field name="client_id" type="text" size="50" default="" label="PLG_AKPAYMENT_BE2BILL_CLIENT_ID_LABEL" description="PLG_AKPAYMENT_BE2BILL_CLIENT_ID_DESCR"/>
        <field name="client_password" type="text" size="50" default="" label="PLG_AKPAYMENT_BE2BILL_CLIENT_PWD_LABEL" description="PLG_AKPAYMENT_BE2BILL_CLIENT_PWD_DESC"/>
				<field type="spacer" />
				<field name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_BE2BILL_SANDBOX_LABEL" description="PLG_AKPAYMENT_BE2BILL_SANDBOX_DESC">
				  <option value="0">JNo</option>
				  <option value="1">JYes</option>
				</field>

        <field name="server2server_main" type="text" size="50" default=""
               label="PLG_AKPAYMENT_BE2BILL_SERVER2SERVER_URL_LABEL"
               description="PLG_AKPAYMENT_BE2BILL_SERVER2SERVER_URL_DESC"/>

        <field name="server2server_second" type="text" size="50" default=""
               label="PLG_AKPAYMENT_BE2BILL_SERVER2SERVER_SECOND_URL_LABEL"
               description="PLG_AKPAYMENT_BE2BILL_SERVER2SERVER_SECOND_URL_DESC"/>

        <field name="payment_url_main" type="text" size="50" default=""
               label="PLG_AKPAYMENT_BE2BILL_PAYMENT_URL_LABEL"
               description="PLG_AKPAYMENT_BE2BILL_PAYMENT_URL_DESC"/>

        <field name="payment_url_second" type="text" size="50" default=""
               label="PLG_AKPAYMENT_BE2BILL_PAYMENT_URL_SECOND_LABEL"
               description="PLG_AKPAYMENT_BE2BILL_PAYMENT_URL_SECOND_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>