<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - PayPoint.net</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2013 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2013-05-27</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_PAYPOINT_DESCRIPTION</description>
	<files>
		<filename plugin="paypoint">paypoint.php</filename>
		<folder>paypoint</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_paypoint.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_paypoint.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYPOINT_TITLE_LABEL" description="PLG_AKPAYMENT_PAYPOINT_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYPOINT_PPIMAGE_LABEL" description="PLG_AKPAYMENT_PAYPOINT_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="surcharge" type="text" size="50" default="" label="PLG_AKPAYMENT_COMMON_SURCHARGE_LABEL" description="PLG_AKPAYMENT_COMMON_SURCHARGE_DESC"/>
				<field type="spacer" />
				<field name="merchant_id" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYPOINT_MERCHANTID_LABEL" description="PLG_AKPAYMENT_PAYPOINT_MERCHANTID_DESC"/>
				<field name="password" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYPOINT_PASSWORD_LABEL" description="PLG_AKPAYMENT_PAYPOINT_PASSWORD_DESC"/>
				<field name="digest_key" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYPOINT_KEY_LABEL" description="PLG_AKPAYMENT_PAYPOINT_KEY_DESC"/>
				<field type="spacer" />
				<field name="logo" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYPOINT_LOGO_LABEL" description="PLG_AKPAYMENT_PAYPOINT_LOGO_DESC"/>
				<field type="spacer" />
				<field name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_PAYPOINT_SANDBOX_LABEL" description="PLG_AKPAYMENT_PAYPOINT_SANDBOX_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>