<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install version="1.5" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - eSelect Plus</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2012 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2012-04-02</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_ESELECTPLUS_DESCRIPTION</description>
	<files>
		<filename plugin="eselectplus">eselectplus.php</filename>
		<folder>eselectplus</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_eselectplus.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_eselectplus.sys.ini</language>
	</languages>
	<params>
		<param name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_ESELECTPLUS_TITLE_LABEL" description="PLG_AKPAYMENT_ESELECTPLUS_TITLE_DESC"/>
		<param name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_ESELECTPLUS_PPIMAGE_LABEL" description="PLG_AKPAYMENT_ESELECTPLUS_PPIMAGE_DESC" />
		<param type="spacer" />
		<param name="store_id" type="text" size="50" default="" label="PLG_AKPAYMENT_ESELECTPLUS_STOREID_LABEL" description="PLG_AKPAYMENT_ESELECTPLUS_STOREID_DESC"/>
		<param name="key" type="text" size="50" default="" label="PLG_AKPAYMENT_ESELECTPLUS_KEY_LABEL" description="PLG_AKPAYMENT_ESELECTPLUS_KEY_DESC"/>
		<param type="spacer" />
		<param name="language" type="radio" default="en-ca" label="PLG_AKPAYMENT_ESELECTPLUS_LANGUAGE_LABEL" description="PLG_AKPAYMENT_ESELECTPLUS_LANGUAGE_DESC">
			<option value="en-ca">PLG_AKPAYMENT_ESELECTPLUS_LANGUAGE_EN</option>
			<option value="fr-ca">PLG_AKPAYMENT_ESELECTPLUS_LANGUAGE_FR</option>
		</param>
		<param type="spacer" />
		<param name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_ESELECTPLUS_SANDBOX_LABEL" description="PLG_AKPAYMENT_ESELECTPLUS_SANDBOX_DESC">
		  <option value="0">No</option>
		  <option value="1">Yes</option>
		</param>
	</params>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_ESELECTPLUS_TITLE_LABEL" description="PLG_AKPAYMENT_ESELECTPLUS_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_ESELECTPLUS_PPIMAGE_LABEL" description="PLG_AKPAYMENT_ESELECTPLUS_PPIMAGE_DESC" />	
				<field type="spacer" />
				<field name="store_id" type="text" size="50" default="" label="PLG_AKPAYMENT_ESELECTPLUS_STOREID_LABEL" description="PLG_AKPAYMENT_ESELECTPLUS_STOREID_DESC"/>
				<field name="key" type="text" size="50" default="" label="PLG_AKPAYMENT_ESELECTPLUS_KEY_LABEL" description="PLG_AKPAYMENT_ESELECTPLUS_KEY_DESC"/>
				<field type="spacer" />
				<field name="language" type="radio" default="en-ca" label="PLG_AKPAYMENT_ESELECTPLUS_LANGUAGE_LABEL" description="PLG_AKPAYMENT_ESELECTPLUS_LANGUAGE_DESC">
					<option value="en-ca">PLG_AKPAYMENT_ESELECTPLUS_LANGUAGE_EN</option>
					<option value="fr-ca">PLG_AKPAYMENT_ESELECTPLUS_LANGUAGE_FR</option>
				</field>
				<param type="spacer" />
				<field name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_ESELECTPLUS_SANDBOX_LABEL" description="PLG_AKPAYMENT_ESELECTPLUS_SANDBOX_DESC">
				  <option value="0">No</option>
				  <option value="1">Yes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</install>
