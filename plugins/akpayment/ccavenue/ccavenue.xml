<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install version="1.5" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - ccAvenue</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2011-06-02</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_CCAVENUE_DESCRIPTION</description>
	<files>
		<filename plugin="ccavenue">ccavenue.php</filename>
		<folder>ccavenue</folder>
		<!-- Of course index.html files ARE NOT required and HAVE NOTHING TO DO
		   with security. But JED requires them because they never bothered to
		   stop and think. Ignorance is bliss. -->
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_akpayment_ccavenue.ini</language>
		<language tag="en-GB">en-GB.plg_akpayment_ccavenue.sys.ini</language>
		<language tag="da-DK">da-DK.plg_akpayment_ccavenue.ini</language>
		<language tag="da-DK">da-DK.plg_akpayment_ccavenue.sys.ini</language>
	</languages>
	<params>
		<param name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_CCAVENUE_TITLE_LABEL" description="PLG_AKPAYMENT_CCAVENUE_TITLE_DESC"/>
		<param type="spacer" />
		<param name="merchant" type="text" size="50" default="" label="PLG_AKPAYMENT_CCAVENUE_MERCHANT_LABEL" description="PLG_AKPAYMENT_CCAVENUE_MERCHANT_DESC"/>
		<param name="workingkey" type="text" size="50" default="" label="PLG_AKPAYMENT_CCAVENUE_WORKINGKEY_LABEL" description="PLG_AKPAYMENT_CCAVENUE_WORKINGKEY_DESC"/>
	</params>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_CCAVENUE_TITLE_LABEL" description="PLG_AKPAYMENT_CCAVENUE_TITLE_DESC"/>
				<field type="spacer" />
				<field name="merchant" type="text" size="50" default="" label="PLG_AKPAYMENT_CCAVENUE_MERCHANT_LABEL" description="PLG_AKPAYMENT_CCAVENUE_MERCHANT_DESC"/>
				<field name="workingkey" type="text" size="50" default="" label="PLG_AKPAYMENT_CCAVENUE_WORKINGKEY_LABEL" description="PLG_AKPAYMENT_CCAVENUE_WORKINGKEY_DESC"/>
			</fieldset>
		</fields>
	</config>
</install>
