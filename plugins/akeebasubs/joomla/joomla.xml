<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install version="1.5" type="plugin" group="akeebasubs" method="upgrade">
	<name>Akeeba Subscriptions - Joomla! 1.6 Usergroups Integration</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>April 2011</creationDate>
	<version>1.0</version>
	<description>PLG_AKEEBASUBS_JOOMLA_DESCRIPTION</description>
	<files>
		<filename plugin="joomla">joomla.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_akeebasubs_joomla.ini</language>
		<language tag="en-GB">en-GB.plg_akeebasubs_joomla.sys.ini</language>
		<language tag="da-DK">da-DK.plg_akeebasubs_joomla.ini</language>
		<language tag="da-DK">da-DK.plg_akeebasubs_joomla.sys.ini</language>
		<language tag="de-DE">de-DE.plg_akeebasubs_joomla.ini</language>
		<language tag="de-DE">de-DE.plg_akeebasubs_joomla.sys.ini</language>
		<language tag="el-GR">el-GR.plg_akeebasubs_joomla.ini</language>
		<language tag="el-GR">el-GR.plg_akeebasubs_joomla.sys.ini</language>
	</languages>
	<params>
		<param name="addgroups" type="textarea" default="" label="PLG_AKEEBASUBS_JOOMLA_ADDGROUPS_TITLE" description="PLG_AKEEBASUBS_JOOMLA_ADDGROUPS_DESCRIPTION" rows="5" cols="30" />
		<param name="removegroups" type="textarea" default="" label="PLG_AKEEBASUBS_JOOMLA_REMOVEGROUPS_TITLE" description="PLG_AKEEBASUBS_JOOMLA_REMOVEGROUPS_DESCRIPTION" rows="5" cols="30" />
	</params>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="addgroups" type="textarea" default="" label="PLG_AKEEBASUBS_JOOMLA_ADDGROUPS_TITLE" description="PLG_AKEEBASUBS_JOOMLA_ADDGROUPS_DESCRIPTION" rows="5" cols="30" />
				<field name="removegroups" type="textarea" default="" label="PLG_AKEEBASUBS_JOOMLA_REMOVEGROUPS_TITLE" description="PLG_AKEEBASUBS_JOOMLA_REMOVEGROUPS_DESCRIPTION" rows="5" cols="30" />
			</fieldset>
		</fields>
	</config>
</install>
