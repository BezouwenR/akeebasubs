<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install version="1.5" type="plugin" group="akeebasubs" method="upgrade">
	<name>Akeeba Subscriptions - Phoca Download Integration</name>
	<author>Roland Dalmulder</author>
	<authorEmail>contact@csvimproved.com</authorEmail>
	<authorUrl>http://www.csvimproved.com</authorUrl>
	<copyright>Copyright (c) 2012 Roland Dalmulder</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>Janury 2012</creationDate>
	<version>1.0</version>
	<description>PLG_AKEEBASUBS_PHOCADOWNLOAD_DESCRIPTION</description>
	<files>
		<filename plugin="phocadownload">phocadownload.php</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akeebasubs_phocadownload.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akeebasubs_phocadownload.sys.ini</language>
	</languages>
	<params>
		<param name="addgroups" type="textarea" default="" label="PLG_AKEEBASUBS_PHOCADOWNLOAD_ADDGROUPS_TITLE" description="PLG_AKEEBASUBS_PHOCADOWNLOAD_ADDGROUPS_DESCRIPTION" rows="5" cols="30" />
		<param name="removegroups" type="textarea" default="" label="PLG_AKEEBASUBS_PHOCADOWNLOAD_REMOVEGROUPS_TITLE" description="PLG_AKEEBASUBS_PHOCADOWNLOAD_REMOVEGROUPS_DESCRIPTION" rows="5" cols="30" />
	</params>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="addgroups" type="textarea" default="" label="PLG_AKEEBASUBS_PHOCADOWNLOAD_ADDGROUPS_TITLE" description="PLG_AKEEBASUBS_PHOCADOWNLOAD_ADDGROUPS_DESCRIPTION" rows="5" cols="30" />
				<field name="removegroups" type="textarea" default="" label="PLG_AKEEBASUBS_PHOCADOWNLOAD_REMOVEGROUPS_TITLE" description="PLG_AKEEBASUBS_PHOCADOWNLOAD_REMOVEGROUPS_DESCRIPTION" rows="5" cols="30" />
			</fieldset>
		</fields>
	</config>
</install>
