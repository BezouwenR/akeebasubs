<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="akeebasubs" method="upgrade">
	<name>Akeeba Subscriptions - Frontend User Access Integration</name>
	<author>Carsten Engel</author>
	<authorEmail>-</authorEmail>
	<authorUrl>http://www.pages-and-items.com</authorUrl>
	<copyright>Copyright (c)2013 Carsten Engel</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>January 2013</creationDate>
	<version>1.0.0</version>
	<description>Adds users to Frontend-User-Access groups when their subscription is enabled and removes them from Frontend-User-Access groups when their subscription expires in Akeeba Subscriptions.</description>
	<files>
		<filename plugin="frontenduseraccess">frontenduseraccess.php</filename>		
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akeebasubs_frontenduseraccess.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akeebasubs_frontenduseraccess.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="addgroups" type="textarea" default="" label="PLG_AKEEBASUBS_FRONTENDUSERACCESS_ADDGROUPS_TITLE" description="PLG_AKEEBASUBS_FRONTENDUSERACCESS_ADDGROUPS_DESCRIPTION" rows="5" cols="30" />
				<field name="removegroups" type="textarea" default="" label="PLG_AKEEBASUBS_FRONTENDUSERACCESS_REMOVEGROUPS_TITLE" description="PLG_AKEEBASUBS_FRONTENDUSERACCESS_REMOVEGROUPS_DESCRIPTION" rows="5" cols="30" />
			</fieldset>
		</fields>
	</config>
	
	
</extension>