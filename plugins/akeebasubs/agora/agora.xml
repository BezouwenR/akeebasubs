<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install version="1.5" type="plugin" group="akeebasubs" method="upgrade">
	<name>Akeeba Subscriptions - Agora Integration</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2012 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>March 2012</creationDate>
	<version>1.0</version>
	<description>PLG_AKEEBASUBS_AGORA_DESCRIPTION</description>
	<files>
		<filename plugin="agora">agora.php</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akeebasubs_agora.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akeebasubs_agora.sys.ini</language>
	</languages>
	<params>
		<param name="agoraversion" type="list" default="3" label="PLG_AKEEBASUBS_AGORA_VERSION" desription="PLG_AKEEBASUBS_AGORA_VERSION_DESCRIPTION">
			<option value="3">3</option>
			<option value="4">4</option>
		</param>
		<param name="addgroups" type="textarea" default="" label="PLG_AKEEBASUBS_AGORA_ADDGROUPS_TITLE" description="PLG_AKEEBASUBS_AGORA_ADDGROUPS_DESCRIPTION" rows="5" cols="30" />
		<param name="removegroups" type="textarea" default="" label="PLG_AKEEBASUBS_AGORA_REMOVEGROUPS_TITLE" description="PLG_AKEEBASUBS_AGORA_REMOVEGROUPS_DESCRIPTION" rows="5" cols="30" />
		<param name="ignoreadmins" type="list" default="1" label="PLG_AKEEBASUBS_AGORA_IGNOREADMINS" description="PLG_AKEEBASUBS_AGORA_IGNOREADMINS_DESCRIPTION">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
			
	</params>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="agoraversion" type="list" default="3" label="PLG_AKEEBASUBS_AGORA_VERSION" desription="PLG_AKEEBASUBS_AGORA_VERSION_DESCRIPTION">
					<option value="3">3</option>
					<option value="4">4</option>
				</field>
				<field name="addgroups" type="textarea" default="" label="PLG_AKEEBASUBS_AGORA_ADDGROUPS_TITLE" description="PLG_AKEEBASUBS_AGORA_ADDGROUPS_DESCRIPTION" rows="5" cols="30" />
				<field name="removegroups" type="textarea" default="" label="PLG_AKEEBASUBS_AGORA_REMOVEGROUPS_TITLE" description="PLG_AKEEBASUBS_AGORA_REMOVEGROUPS_DESCRIPTION" rows="5" cols="30" />
				<field name="ignoreadmins" type="list" default="1" label="PLG_AKEEBASUBS_AGORA_IGNOREADMINS" description="PLG_AKEEBASUBS_AGORA_IGNOREADMINS_DESCRIPTION">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</install>
