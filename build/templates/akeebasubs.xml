			<language tag="en-GB">en-GB/en-GB.com_akeebasubs.sys.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_akeebasubs.menu.ini</language>
		</languages>

	</administration>
	
	<!-- Installation / uninstallation PHP scripts -->
	<installfile>install.akeebasubs.php</installfile>
	<!-- For some stupid reason, Joomla! DID NOT use the file when it was named uninstall.akeebasubs.php. Beats me! -->
