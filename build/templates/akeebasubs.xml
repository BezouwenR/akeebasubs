<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" version="1.5.0" method="upgrade">
	<name>AkeebaSubs</name>
	<creationDate>##DATE##</creationDate>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@akeebabackup.com</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2010-2011 Nicholas K. Dionysopoulos</copyright>
	<license>GNU/GPL v3 or later</license>
	<version>##VERSION##</version>
	<description>Akeeba Subscriptions v.##VERSION##</description>

	<!-- Public front end files -->
	<files folder="frontend">
		<filename>akeebasubs.php</filename>
		<filename>dispatcher.php</filename>
		<filename>index.html</filename>
		<folder>controllers</folder>
		<folder>models</folder>
		<folder>templates</folder>
		<folder>views</folder>
	</files>

	<!-- Front end translation files -->
	<languages folder="translations/frontend">
		<language tag="en-GB">en-GB.com_akeebasubs.ini</language>
	</languages>

	<!-- SQL query files to execute on installation -->
	<install>
		<sql>
			<file charset="utf8" driver="mysql">install/install.sql</file>
			<file charset="utf8" driver="mysqli">install/install.sql</file>
		</sql>
	</install>

	<!-- SQL query files to execute on uninstallation -->
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">install/uninstall.sql</file>
			<file charset="utf8" driver="mysqli">install/uninstall.sql</file>
		</sql>
	</uninstall>
	
	<!-- Media files -->
	<media destination="com_akeebasubs" folder="media">
		<filename>index.html</filename>
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
	</media>

	<!-- Administrator back-end section -->
	<administration>
		<!-- Administration menu -->
		<menu view="cpanel" img="../media/com_akeebasubs/images/akeebasubs-16.png">COM_AKEEBASUBS</menu>
		<!-- Back-end files -->
		<files folder="backend">
			<filename>akeebasubs.php</filename>
			<filename>config.json</filename>
			<filename>dispatcher.php</filename>
			<filename>gChart.php</filename>
			<filename>index.html</filename>
			<folder>commands</folder>
			<folder>controllers</folder>
			<folder>databases</folder>
			<folder>install</folder>
			<folder>models</folder>
			<folder>simpleforms</folder>
			<folder>templates</folder>
			<folder>toolbars</folder>
			<folder>views</folder>
		</files>

		<!-- Back-end translation files -->
		<languages folder="translations/backend">
			<language tag="en-GB">en-GB.com_akeebasubs.ini</language>
			<language tag="en-GB">en-GB.com_akeebasubs.menu.ini</language>
		</languages>

	</administration>
</install>